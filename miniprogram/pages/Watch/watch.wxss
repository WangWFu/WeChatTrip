.bottom{
  position: fixed;
  bottom: 20rpx;
  top: 0;
  left: 0;
  right: 0;
  margin: auto auto 0;
  width: 300rpx;
  height: 60rpx;
  background: #FED46E;
  border: 1px solid #FED46E;
  text-align: center;
  border-radius: 4px;
  z-index: 100;
}
.text-publish{
  color: #A9A9A9;
}
