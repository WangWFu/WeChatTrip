/* miniprogram/pages/billdsc/billdsc.wxss */
Page{
  background: rgb(247, 247, 247);
}
.header{
  height: 200rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.con text:nth-of-type(1){
  font-size: 27rpx;
}
.con text:nth-of-type(2){
  font-size: 40rpx;
  color: rgb(243, 64, 64);
  margin-left: 8rpx;
}

.list{
  margin-top: 30rpx;
}
.item{
  height: 70rpx;
  background: #fff;
  overflow: hidden;
 line-height: 70rpx;
 border-bottom: 1px solid #eee;
 padding: 20rpx 0;
}
.left{
  float: left;
}
.right{
  float: right;
  color: rgb(216, 216, 216)
}
.imgSrc{
  width: 100rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.foot{
  margin-top: 30rpx;
}
.footitem{
  height: 70rpx;
  background: #fff;
  overflow: hidden;
 line-height: 70rpx;
 border-bottom: 1px solid #eee;
 padding: 10rpx 0;
}
.nleft{
  float: left;
}
.nright{
  float: right;
  color: rgb(216, 216, 216)
}
.footer{
  position: fixed;
  bottom: 50rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  text-align: center;
}
.del{
  width: 150rpx;
  height: 60rpx;
  background: rgb(241, 50, 50);
  border-radius: 60rpx;
  color: #fff;
  box-shadow: 1px 1px 1px rgb(241, 50, 50)
}
.det{
 width: 150rpx;
  height: 60rpx;
  background: #09BB07;
  border-radius: 60rpx;
  color: #fff;
  box-shadow: 1px 1px 1px rgb(9, 187, 7)
}

/* 记账界面 */
.showcontent{
   position: absolute;
   top: 0;
   height: 100%;
   background: rgba(0, 0, 0, 0.5);
   z-index: 9
}
.show{
  position: relative;
  width: 700rpx;
  height: 700rpx;
  margin:138rpx 30rpx 30rpx;
  border-radius: 8px;
  background: #fff;
}
