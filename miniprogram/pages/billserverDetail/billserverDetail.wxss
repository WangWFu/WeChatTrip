  border-radius: 50rpx;
  margin: 10rpx 10rpx 10rpx 30rpx;
}
.group image{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
  margin: auto;
}
.btn2{
  height: 100rpx;
  width: 100rpx;
  border-radius: 100rpx;
  padding: 0;
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
  margin: auto;
  opacity: 0;
}
.btn2:not([size='mini']){
  min-height: 0;
  width: 100rpx;
}